<p id="notice"><%= notice %></p>

<div id="l">
<h1>Listing People</h1>
<table id="g">

  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <% puts person.inspect %>

      <tr>
        <td class="firstName<%= person.id %>"><%= person.first_name %></td>
        <td class="lastName<%= person.id %>"><%= person.last_name %></td>
        <td><%= link_to 'Show', "#" ,class: "sg", id: person.id %></td>
        <td><%= link_to 'Edit', "#", class: "edited", id: person.id %></td>
        <td><%= link_to 'Destroy', "#", class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Person', new_person_path , id: 'new_link', remote: true   %>
<%= render 'new'%>
</div>
